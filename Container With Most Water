class Solution {
    public int maxArea(int[] height) {
        int left = 0;
        int right = height.length - 1;
        int h = 0;
        int width = 0;
        int maxArea = 0;
        int area = 0;
        while(left < right){
            width = right - left;
            h = Math.min(height[left], height[right]);
            area = width * h;
            maxArea = Math.max(maxArea, area);

            if(height[left] < height[right])
            left++;
            else
            right--;
        }
        return maxArea;
}
}
